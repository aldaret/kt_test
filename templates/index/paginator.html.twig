{% if pageCount > 1 %}
    <div class="pagination">
        {% if first is defined and current != first %}
            <span class="first p-1">
                <a type="button" class="btn btn-secondary" rel="first" href="{{ path(route, query|merge({(pageParameterName): first})) }}">{{'<<'}}</a>
            </span>
        {% endif %}

        {% if previous is defined %}
            <span class="previous p-1">
                <a type="button" class="btn btn-secondary" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">{{'<'}}</a>
            </span>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="page p-1">
                    <a type="button" class="btn btn-secondary" rel="near" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </span>
            {% else %}
                <span class="current p-1">
                    <a type="button" class="btn btn-secondary disabled" rel="current">{{ page }}</a>
                </span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <span class="next p-1">
                <a type="button" class="btn btn-secondary" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{'>'}}</a>
            </span>
        {% endif %}

        {% if last is defined and current != last %}
            <span class="last p-1">
                <a type="button" class="btn btn-secondary" rel="last" href="{{ path(route, query|merge({(pageParameterName): last})) }}">{{'>>'}}</a>
            </span>
        {% endif %}
    </div>
{% endif %}
